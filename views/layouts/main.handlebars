<!-- Define the HTML document structure and set the language to English -->
<html lang="en">

  <head>
    <!-- Define the character set and the viewport -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Link the stylesheet for styling -->
    <link rel="stylesheet" href="\stylesheets\style.css" />
    <!-- Set the title of the page -->
    <title>Tech Blog</title>

  </head>

  <body class="flex-column min-100-vh">
    <!-- Define the header section -->
    <header>
      <!-- Create a navigation menu with a list of links -->
      <nav class="nav">
        <ul>
          <li>
            <!-- Link to the home page -->
            <a href="/">Home</a>
          </li>
          <!-- Check if the user is logged in -->
          {{#if loggedIn}}
            <li>
              <!-- Link to the dashboard page -->
              <a href="/dashboard">Dashboard</a>
            </li>
            <!-- Create a logout button -->
            <button id="logout" class="btn-no-style">Logout</button>
          {{else}}
            <!-- Display a login/signup menu if the user is not logged in -->
            <li>
              <a href="/login">Login</a>
              <a href="/signup">Signup</a>
            </li>
          {{/if}}
        </ul>
      </nav>
      <!-- Set the page title -->
      <h1 class="pg-title">Tech Blog</h1>
    </header>

    <main>
      <!-- Insert the actual content of the page generated by the server-side application -->
      {{{body}}}
    </main>

    <!-- Load the logout JavaScript file if the user is logged in (chck the script path)-->
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script> 
    {{/if}}
  </body>
</html>
